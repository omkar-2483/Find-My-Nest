<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">Login</h2>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation form" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label mb-1">Username</label>
        <input
          id="username"
          type="text"
          class="form-control"
          name="username"
          required
        />
        <div class="invalid-feedback">Please enter valid Username</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label mb-1">Password</label>
        <input
          id="password"
          type="password"
          class="form-control"
          name="password"
          required
        />
        <div class="invalid-feedback">Please enter valid Username</div>
      </div>
      <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
