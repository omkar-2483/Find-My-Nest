<% layout('/layouts/boilerplate') %>
<body>
  <br />
  <h3 class="offset-2 mt-3"><%= listing.title %></h3>
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card listing-card show-card  mb-0">
        <img
          src="<%= listing.image %>"
          class="card-img-top show-img"
          alt="listing_image"
        />
        <div class="card-body mt-2">
          <p class="card-text">
            <p>Owned By: <i><%= listing.owner.username %></i></p>
            <p><%= listing.description %> </p>
            <p><b>&#x20b9; <%= listing.price.toLocaleString("en-IN") %></b></p>
            <p><%= listing.location %> </p>
            <p><%= listing.country %> </p>
          </p>
        </div>
      </div>
    </div>
    <% if(currUser){ %>
    <div class="btns">
      <a class="btn btn-dark offset-2" href="/listings/<%= listing._id %>/edit"
        >Edit</a
      ><br />
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark offset-2 add-btn">Delete</button>
      </form>
    </div>
  <% } %>
  </div>

  <!-- add review -->
  <div class="col-8 offset-2">
    <hr />
    <% if(currUser){ %>
    <h4>Leave a review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mt-3" style="width: 250px">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
        />
      </div>
      <div class="mb-3">
        <label for="comment" class="form-label">Add a comment</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please leave a comment</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr>
    <% } %>
    <div>
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for(review of listing.reviews){ %>
        <div class="card col-5 mb-2 ms-5 listing">
          <div class="card-body">
            <p class="card-text"><i>@<%= review.author.username %></i></p>
            <p class="card-text"><%= review.comment%></p>
            <p class="card-text"><%= review.rating %> stars</p>
          </div>
          <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
            <button class="btn btn-dark btn-sm">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</body>
