<% layout('/layouts/boilerplate') %>
<body>
  <br />
  <h3 class="offset-3 mt-3">Listing Details</h3>
  <div class="row">
    <div class="col-6 offset-3">
      <div class="card  show-card">
        <img
          src="<%= listing.image %>"
          class="card-img-top show-img"
          alt="listing_image"
        />
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br />
            <b>&#x20b9; <%= listing.price.toLocaleString("en-IN") %></b><br />
            <%= listing.description %> <br />
            <%= listing.location %> <br />
            <%= listing.country %> <br />
          </p>
        </div>
      </div>
    </div>
    <div class="btns">
        <a class="btn btn-dark offset-3" href="/listings/<%= listing._id %>/edit">Edit</a
        ><br />
        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=DELETE"
        >
          <button class="btn btn-dark offset-3 add-btn">Delete</button>
        </form>
      </div>
  </div><br><br>
</body>
